<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MapActivity"
    android:id="@+id/layout_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/searchResultList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </androidx.viewpager.widget.ViewPager>

    <RelativeLayout
        android:id="@+id/name_map"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPaleGoldenrod"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="18dp"
            android:paddingLeft="30dp"
            android:text="지도"
            android:textColor="#000000"
            android:textSize="30sp"
            />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/src_linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/name_map"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/srch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="목적지 입력"
            android:clickable="true"
            android:gravity="center|left"
            android:background="@drawable/textview_layout"
            android:layout_weight="0.5"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:text="검색"
            android:clickable="true"
            android:id="@+id/srch_btn"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/map_total"
        android:layout_above="@+id/map_down_map"
        android:layout_below="@+id/src_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <fragment
            android:id="@+id/Map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/map_down_map"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="3"
        android:background="@color/colorPaleGoldenrod">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/ic_info_outline_gray_24dp"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="도움말"
                android:textColor="@color/colorDarkGray"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/ic_map_black_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="지도"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/ic_camera_alt_gray_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textSize="20sp"
                android:text="카메라"
                android:textColor="@color/colorDarkGray"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>